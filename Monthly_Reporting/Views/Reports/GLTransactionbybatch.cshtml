
@{
    ViewBag.Title = "GLTransactionbybatch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
<div class="right_col" role="main">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <span style="font-size:16px;color:black"><i class="fa fa-edit"></i> GL Trans by batch តាមសាខា</span>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <fieldset class="scheduler-border">
                        <legend>ព័ត៌មានស្វែងរក</legend>
                        <form class="form-inline" action="@Url.Action("execGLTransactionbybatch", "Reports")" method="post">
                            <div class="form-group">
                                <label for="exampleInputEmail2">សាខា:</label>
                                <select class="form-control select2" name="BrCode">
                                    @{
                                        foreach (DataRow dr in ViewBag.dt_ManageZone.Rows)
                                        {
                                            <option value="@dr["BrCode"].ToString()" selected="@(dr["BrCode"].ToString() ==@ViewBag.BrCode ? "selected" : "")">@dr["BrLetter"].ToString() </option>
                                        }
                                    }
                                    <option value="ALL">All</option>
                                </select>
                            </div>                           
                            <div class="form-group">
                                <label for="exampleInputName2">ថ្ងៃចាប់ផ្ដើម:</label>
                                <input type="text" class="form-control" id="datestart" name="datestart" value="@ViewBag.datestart" autocomplete="off" placeholder="@DateTime.Now" />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="dateend" name="dateend" autocomplete="off" value="@ViewBag.dateend" placeholder="@DateTime.Now" />
                            </div>
                            <button type="submit" class="btn btn-primary" value="submit" name="submit" style="margin-top:3px"><i class="fa fa-search"></i> ស្វែងរក</button>
                            <button type="submit" class="btn btn-success" value="download" name="download" style="margin-top:3px"><i class="fa fa-download"></i>ទាញយក</button>
                            @*<a href="#" class="btn btn-primary" style="margin-top:3px" id="downloadExcel"><i class="fa fa-search"></i> ស្វែងរក</a>*@
                        </form>
                    </fieldset>
                    <fieldset class="scheduler-border">
                        <legend>ព័ត៌មានរបាយការណ៍</legend>
                        <div class="row nopadding">
                            <div class="pull-right">
                                <button class="btn btn-primary"><i class="fa fa-print"></i> បោះពុម្ភ</button>
                            </div>
                        </div>
                        <div class="row nopadding">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead class="active" style="white-space: nowrap;overflow: hidden;border-bottom:2pt solid #22d4ae;">
                                        <tr>
                                            <th>BrCode</th>
                                            <th>BrName</th>
                                            <th>HISJnlType</th>
                                            <th>HISJnlType</th>
                                            <th>JnlTrn</th>
                                            <th>JnlDesc</th>
                                            <th>JnlNumber</th>
                                            <th>LineNumber</th>
                                            <th>GLAcc</th>
                                            <th>GLAccName</th>
                                            <th>PostDate</th>
                                            <th>ValueDate</th>
                                            <th>TrnAmt</th>
                                            <th>FullDesc</th>
                                            <th>CCyType</th>
                                            <th>TlrPostedBy</th>
                                            <th>TlrPostedPosit</th>
                                            <th>TlrAuthBy</th>
                                            <th>TlrAuthName</th>
                                            <th>TlrAuthPosit</th>
                                            <th>Ref</th>
                                        </tr>

                                    </thead>
                                    @{
                                        foreach (DataRow dr in ViewBag.dt_Report.Rows)
                                        {

                                        <tr style="white-space: nowrap;overflow: hidden;">
                                            <td>@dr["BrCode"].ToString()</td>
                                            <td>@dr["BrName"].ToString()</td>
                                            <td>@dr["TrnJnlType"].ToString()</td>
                                            <td>@dr["HISJnlType"].ToString()</td>
                                            <td>@dr["JnlTrn"].ToString()</td>
                                            <td>@dr["JnlDesc"].ToString()</td>
                                            <td>@dr["JnlNumber"].ToString()</td>
                                            <td>@dr["LineNumber"].ToString()</td>
                                            <td>@dr["GLAcc"].ToString()</td>
                                            <td>@dr["GLAccName"].ToString()</td>
                                            <td>@dr["PostDate"].ToString()</td>
                                            <td>@dr["ValueDate"].ToString()</td>
                                            <td>@dr["TrnAmt"].ToString()</td>
                                            <td>@dr["FullDesc"].ToString()</td>
                                            <td>@dr["CCyType"].ToString()</td>
                                            <td>@dr["TlrPostedBy"].ToString()</td>
                                            <td>@dr["TlrPostedPosit"].ToString()</td>
                                            <td>@dr["TlrAuthBy"].ToString()</td>
                                            <td>@dr["TlrAuthName"].ToString()</td>
                                            <td>@dr["TlrAuthPosit"].ToString()</td>
                                            <td>@dr["Ref"].ToString()</td>
                                        </tr>
                                            }
                                        }
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>
